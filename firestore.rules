rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profile & stats
    match /users/{uid} {
      allow read, write: if request.auth != null && uid == request.auth.uid;
    }

    // User scores
    match /userScores/{uid} {
      allow read, write: if request.auth != null && uid == request.auth.uid;
      match /scores/{scoreId} {
        allow read, write: if request.auth != null && uid == request.auth.uid;
      }
    }

    // User search history
    match /searchHistory/{uid} {
      allow read, write: if request.auth != null && uid == request.auth.uid;
      match /videos/{videoId} {
        allow read, write: if request.auth != null && uid == request.auth.uid;
      }
    }

    // User custom tabs - users can only access their own tabs
    match /userTabs/{tabId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }

    // Leaderboard (global, readable/writable by all authenticated users)
    match /leaderboard/{document} {
      allow read, write: if request.auth != null;
    }

    // Catch-all rule for any other collections (remove this for production)
    match /{document=**} {
      allow read, write: if true;
    }
  }
} 